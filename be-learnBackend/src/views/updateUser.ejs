<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <!-- <link rel="stylesheet" href="./css/styles.css"> -->
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .anhMeo {
            width: 200px;
        }

        .topnav {
            background-color: #333;
            overflow: hidden;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        /* Change the color of links on hover */
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Add a color to the active/current link */
        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }

        .form {
            width: 60%;
            margin: auto;
            padding: 50px;
        }

        fieldset {
            padding: 20px;
        }

        #userId {
            display: none;
        }
    </style>
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create User</a>
    </div>
    <div class="form">
        <form action="/update-user" method="post">
            <fieldset>
                <legend>Update user:</legend>
                <input type="text" id="userId" name="userId" value="<%=userInfo.id%>">

                <label for="email">Email:</label>
                <input type="text" id="fname" name="email" value="<%=userInfo.email%>"> <br><br>
                <label for="name">Name:</label>
                <input type="text" id="lname" name="name" value="<%=userInfo.name%>"><br><br>
                <label for="city">City:</label>
                <input type="text" id="email" name="city" value="<%=userInfo.city%>"><br><br>
                <button type="submit">Save</button>
            </fieldset>
        </form>
    </div>
</body>

</html>